body {
  padding-top: 0px;
}

.row {
  margin-right: -15px;
  margin-left: -15px;
}
.container {
    padding-right: 0px;
    padding-left: 0px;
    margin-right: auto;
    margin-left: auto;
}
[class*="col-"], footer {
    line-height: 20px;
    text-align: center;
    vertical-align:middle;
    font-family: 'Oswald', sans-serif;
}

@media (min-width: 768px) {
    .container {
	width: 750px;
    }
}
@media (min-width: 992px) {
    .container {
	width: 970px;
    }
}
@media (min-width: 1200px) {
    .container {
    width: 100%;
    }
}
.col-lg-offset-6 {
    margin-left: 50%;
}
article{
    height: 400px;
}

.col-lg-4 img {
  width:100%;
  overflow:hidden;
  -webkit-border-radius:50px;
  -moz-border-radius:50px;
  border-radius:200px;
  width: 200px;
  height: 200px;
  display: block;
  margin-left: auto;
  margin-right: auto 
}

input {
    display: inline-block;
    width: 100px;
}

#slideshow {
padding-top:0px;
    position:relative;
    width: 100%;
    height: 420px;
    overflow: hidden;
}

#slideshow .carroussel {
  position: absolute;
  left:0; top:0;
  width: 300%;
  height: 420px;
}
 
#slideshow figure {
  position:relative;
  display:inline-block;
  padding:0;
  margin:0;
}

#slideshow figcaption {
position:absolute;
padding:0;
margin:0;
}
 
#section-1, #section-3{
    background:#28BB69;
    padding-top: 10px;
    color: white;
}

#section-2{
    background:#F6F6F8;
    padding-top: 10px;
}
#section-2 img{
  filter: grayscale(1);
        -webkit-filter: grayscale(1);
        -moz-filter: grayscale(1);
        -o-filter: grayscale(1);
        -ms-filter: grayscale(1);
}
#section-2 img:hover{
  filter: grayscale(0);
        -webkit-filter: grayscale(0);
        -moz-filter: grayscale(0);
        -o-filter: grayscale(0);
        -ms-filter: grayscale(0);
}

#section-3{
    background:#1E2728;
    padding-top: 10px;
}

#middle-foot{
border-left:1px solid white;
border-right:1px solid white;
}

.liste-vertical{
list-style-type:none;
}
